# Groq Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# Ollama Configuration (for embeddings only)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=gemma
OLLAMA_RERANKER_MODEL=bge-reranker-v2-m3

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rag_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_TABLE_NAME=rag_embeddings

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
LOG_LEVEL=INFO

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=128
TOP_K_RETRIEVAL=10
TOP_K_RERANK=5
SIMILARITY_THRESHOLD=0.7

# Chat Configuration
MAX_CHAT_HISTORY=10
MAX_TOKENS=3000

# Confidence Scoring Weights
WEIGHT_RETRIEVAL=0.40
WEIGHT_COHERENCE=0.30
WEIGHT_COVERAGE=0.20
WEIGHT_CLARITY=0.10

# CORS
CORS_ORIGINS=["http://localhost:3000"]
