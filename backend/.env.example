# Groq Configuration
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# Ollama Configuration (for embeddings only - local mode)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=embeddinggemma
OLLAMA_RERANKER_MODEL=mixedbread-ai/mxbai-rerank-large-v2

# Embedding & Reranker Provider Selection
# EMBEDDING_PROVIDER: ollama | remote | cohere
# RERANKER_PROVIDER: local | remote | cohere
EMBEDDING_PROVIDER=ollama
RERANKER_PROVIDER=local

# Cohere Configuration
COHERE_API_KEY=
COHERE_EMBEDDING_MODEL=embed-english-v3.0
COHERE_RERANK_MODEL=rerank-english-v3.0


# Remote Embedding Service (Lightning.ai)
# Set to true to use your hosted embedding service with its base url
USE_REMOTE_EMBEDDING_SERVICE=false
REMOTE_EMBEDDING_SERVICE_URL=

#AuraSQL configurations
AURASQL_MASTER_KEY=
JWT_SECRET=
JWT_REFRESH_SECRET=
AURASQL_TABLE_NAME=aurasql_embeddings
NEXUS_RESUME_TABLE_NAME=nexus_resume_embeddings

# Nexus Resume Configuration
NEXUS_RESUME_UPLOAD_DIR=./data/resumes
NEXUS_RESUME_ALLOWED_EXTENSIONS=[".pdf", ".docx", ".doc", ".txt"]
NEXUS_RESUME_MAX_SIZE_MB=20

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_TABLE_NAME=rag_embeddings

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE_MB = 200  # Maximum upload size in MB

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=128
TOP_K_RETRIEVAL=15
TOP_K_RERANK=5
SIMILARITY_THRESHOLD=0.5

# Chat Configuration
MAX_CHAT_HISTORY=10
MAX_TOKENS=3000

# Confidence Scoring Weights
WEIGHT_RETRIEVAL=0.40
WEIGHT_COHERENCE=0.30
WEIGHT_COVERAGE=0.20
WEIGHT_CLARITY=0.10

# CORS
CORS_ORIGINS=["http://localhost:3000"]
